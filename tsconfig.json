{
  "include": [
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "outDir": "./extension/dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "verbatimModuleSyntax": false
    }
  }
}
